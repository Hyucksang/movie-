<div class="container">
    <form action="new_movie">
  <div class="form-group">
    <label for="title">영화추가</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="영화">
</div>
  <button type="submit" class="btn btn-default">Submit</button>

</form>
</div>


<div class="container">
    <% @movie_info.each do |movie| %>
<secton class="row">
    <div class="col-md-3 poster"><img src="<%= movie['Poster'] %>"></div>
    <div class="col-md-9 content">
    <p>Title : <%= movie['Title'] %></p>
    <p>Director : <%= movie['Director'] %></p>
    <p>Runtime : <%= movie['Runtime'] %></p>
    </div>
</secton>
<%end%>
</div>